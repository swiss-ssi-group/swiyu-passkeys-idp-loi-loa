@page
@model Idp.Swiyu.Passkeys.Sts.Pages.Login.LoginModel
@{
}

<div class="container my-5 swiyu-page">
   
    @if (Model.QrCodePng!.Length > 0)
    {
        <div class="row justify-content-center mt-4" id="qrCodeImage">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm swiyu-qr-card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Scan with your swiyu wallet</h5>
                        <div class="swiyu-qr-wrapper">
                            <img alt="QR code for swiyu verification"
                                 src="data:image/png;base64,@System.Convert.ToBase64String(Model.QrCodePng)"
                                 class="img-fluid" />
                        </div>
                        <div>
                            <a class="swiyu-deeplink" href="@Model.DeepLink">Open in wallet</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.VerificationId != null)
    {
        <form method="post" id="pollSwiyu" name="pollSwiyu">
            <input type="hidden" asp-for="ReturnUrl" />
            <input type="hidden" id="verificationId" name="verificationId"  asp-for="VerificationId" />
            <button style="display:none;" type="submit" id="buttonPollSwiyu" name="buttonPollSwiyu" class="btn btn-outline-dark">Start polling</button>
        </form>
    }

    <div class="row justify-content-center" id="verifiedDataButton">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary-card text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <p class="swiyu-register-hint">
                        <span>Don't have an E-ID yet?</span>
                        <a class="btn btn-link" asp-page="/Swiyu/Register">Register E-ID</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/verifier-swiyu.js"></script>
}
