@page "/"
@using System.Security.Claims

<PageTitle>Home</PageTitle>

<AuthorizeView>
    <Authorized>
        <h1>User Claims</h1>
        
        <p>@context.User.Identity?.Name</p>

        @if (context.User.Claims.Any())
        {
            <div class="alert alert-info">
                <h5>Security Level</h5>
                @if (context.User.Claims.Any(c => c.Type == "loa"))
                {
                    <p><strong>Level of Authentication (LOA):</strong> @context.User.Claims.First(c => c.Type == "loa").Value</p>
                }
                @if (context.User.Claims.Any(c => c.Type == "loi"))
                {
                    <p><strong>Level of Identification (LOI):</strong> @context.User.Claims.First(c => c.Type == "loi").Value</p>
                }
            </div>
        }

        @if (context.User.Claims.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Claim Type</th>
                        <th>Claim Value</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in context.User.Claims.OrderBy(c => c.Type))
                    {
                        <tr>
                            <td><code>@claim.Type</code></td>
                            <td>@claim.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No claims found.</p>
        }
    </Authorized>
    <NotAuthorized>
        <h1>Welcome</h1>
        <p>Please <a href="login">log in</a> to view your claims.</p>
    </NotAuthorized>
</AuthorizeView>
