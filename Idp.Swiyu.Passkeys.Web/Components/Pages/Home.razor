@page "/"
@using System.Security.Claims

<PageTitle>Home</PageTitle>

<AuthorizeView>
    <Authorized>
        <h1>User Claims</h1>
        
        <p>Welcome, @context.User.Identity?.Name</p>

        @if (context.User.Claims.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Claim Type</th>
                        <th>Claim Value</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in context.User.Claims.OrderBy(c => c.Type))
                    {
                        <tr>
                            <td><code>@claim.Type</code></td>
                            <td>@claim.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No claims found.</p>
        }
    </Authorized>
    <NotAuthorized>
        <h1>Welcome</h1>
        <p>Please <a href="login">log in</a> to view your claims.</p>
    </NotAuthorized>
</AuthorizeView>
